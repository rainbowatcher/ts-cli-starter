{
    "prettier.enable": false,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "yaml",
        "json",
        "jsonc",
        "markdown",
    ],
    "cSpell.words": [
        "tsdown",
    ],
}
